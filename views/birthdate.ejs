<html xmlns="http://www.w3.org/1999/xhtml">

<head runat="server">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../assets/style.css">
    <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
    <script src="../assets/script.js"></script>
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/themes/base/jquery-ui.css" type="text/css"
        media="all" />
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.4.4.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $("#txtyear").datepicker(
                {
                    minDate: new Date(1900, 1 - 1, 1), maxDate: '-21Y',
                    dateFormat: 'mm/dd/yy',
                    defaultDate: new Date(1997, 1 - 1, 1),
                    changeMonth: true,
                    changeYear: true,
                    yearRange: '-110:-21'
                    
                }
            );
        });
        
        function validate() {
            var mob = document.getElementById("txtyear").value;
            if (mob == "") {
                document.getElementById("dob").innerHTML = 'Please enter your Date of Birth';
                document.getElementById("txtyear").focus();
                return false;
            }
            else {
                document.getElementById("dob").innerHTML = "";
            }

        }
    </script>


</head>

<body>

    <div class="topnav">
        <div class="col-md-12">
            <img class="col-md-2 col-md-offset-1" onclick="location.href='/' " id="logo" src="/public/images/wemaste_Logo.png">
        </div>
        <div class="col-md-12">
            <hr style="border:0.5px solid #FC97B9; margin-top: -20px;">
        </div>
    </div>

    <div class="container">
        <form action="./email" method="post" onSubmit="return validate()">
            <div class="form-group">
                <div class="col-md-12">
                    <span class="control-label col-md-3">
                        <div style="font-size: 25px; color:#01364D;">
                            <b>Sign Up</b>
                        </div>
                        <br/>
                        <div style="font-size: 17px; color:#01364D; margin-top: -5px;">Must be 21 years older to host for Wemaste</div>
                    </span>
                    <div class="col-md-4 col-md-offset-1" style="margin-top: 20px;">
                        <input type="text" class="form-control input-lg" id="fullname" name="fullName" value="<%= data.fullName %>" disabled />
                        <input type="hidden" class="form-control input-lg" id="fullname" name="fullName" value="<%= data.fullName %>">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="text" class="form-control input-lg" id="txtyear" name="dobDt" autocomplete="off" maxlength="10" placeholder="Date of Birth">
                        <div style="text-align: center; margin-top: 10px;">
                            <span id="dob" style="color:red;"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-4" style="margin-top: 200px;">
                    <button type="submit" id="submit" class="btn  btn-block">Next</button>
                </div>
            </div>
        </form>
    </div>


</body>

</html>