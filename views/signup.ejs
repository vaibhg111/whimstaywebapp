<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="../assets/style.css">
  <script src="../assets/validation.js"></script>
  <script src="../assets/script.js"></script>
  <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="topnav">
    <div class="col-md-12">
      <img class="col-md-2 col-md-offset-1" onclick="location.href='/' " id="logo" src="/public/images/wemaste_Logo.png">
    </div>
    <div class="col-md-12">
      <hr style="border:0.5px solid #FC97B9; margin-top: -20px;">
    </div>
  </div>

  <div class="container">
    <form action="./birthdate" method="post" onSubmit="return validate()">
      <div class="form-group">
        <div class="col-md-12">
          <span class="control-label col-md-3">
            <div style="font-size: 25px; color:#01364D;">
              <b>Sign Up</b>
            </div>
            <br/>
            <div style="font-size: 17px; color:#01364D; margin-top: -5px;">Enter your first and last name</div>
          </span>
          <div class="col-md-4 col-md-offset-1" style="margin-top: 20px;">
            <input type="text" class="form-control input-lg" id="fullname" name="fullName" placeholder="Full Name">
            <div style="text-align: center; margin-top: 10px;">
              <span id="umsg" style="color:red;"></span>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-4 col-md-4" style="margin-top: 280px;">
          <button type="submit" id="submit" class="btn  btn-block">Next</button>
        </div>
      </div>
    </form>
  </div>


</body>

</html>