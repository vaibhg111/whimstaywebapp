<head runat="server">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="../assets/style.css">
<link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
<script src="../assets/validation.js"></script>
<script>

function txtYear(){
  var input = '<%= data.dobDt%>';
var output = input.replace(/(\d\d)\/(\d\d)\/(\d{4})/, "$3-$1-$2");
  if(output!=""){
     document.getElementById("txt_year").value=output;
  }
}


</script>

</head>
<body>

  <div class="topnav" >
        <div class="col-md-12" >
        <img class="col-md-2 col-md-offset-1" onclick="location.href='/' " id="logo" src="/public/images/wemaste_Logo.png">
      </div>  
      <div class="col-md-12">
      <hr style="border:0.5px solid #FC97B9; margin-top: -20px;">
      </div>
      </div>
      
    <div class="container">
    <form action="/otpuser" method="post" onSubmit="return validate()">
    <div class="form-group"> 
      <div class="col-md-12">
      <span class="control-label col-md-3"><div style="font-size: 25px; color:#01364D;"><b>Sign Up</b></div><br/>
        <div style="font-size: 17px; color:#01364D; margin-top: -5px;">Enter your mobile number and tap Next to get a SMS confirmation</div></span>
      <div class="col-md-4 col-md-offset-1" style="margin-top: 20px;">
        <input type="text" class="form-control input-lg" id="fullname" name="fullName" value="<%= data.fullName %>" disabled />
        <input type="hidden" class="form-control input-lg" id="fullname" name="fullName" value="<%= data.fullName %>">
      </div></div>

      <div class="col-md-12" style="margin-top: -35px;">
      <div class="col-md-4 col-md-offset-4">
            <input type="text" class="form-control input-lg" id="txtyear1" name="dobDt" value="<%= data.dobDt %>" disabled />
            <input type="hidden" class="form-control input-lg" id="txt_year" name="dobDt">
          </div>
    </div>

    <div class="col-md-12">
            <div class="col-md-4 col-md-offset-4" style="margin-top: 20px;">
                    <input type="text" class="form-control input-lg" id="email" name="emailId" value="<%= data.emailId %>" disabled />
                    <input type="hidden" class="form-control input-lg" id="email" name="emailId" value="<%= data.emailId %>"  /> 
                </div>
          </div>

    <div class="col-md-12">
            <div class="col-md-4 col-md-offset-4" style="margin-top: 20px;">
                    <input type="text" class="form-control input-lg" id="numb" name="mobileno1" onchange="txtYear();" maxlength="10" placeholder="Enter Mobile Number"//>  
                    <div style="text-align: center; margin-top: 10px;"><span id="number" style="color:red;"></span></div>
            </div>
     </div>
</div>
    
    <div class="form-group">        
      <div class="col-md-offset-4 col-md-4" style="margin-top: 80px;">
        <button type="submit" id="submit" onclick="return validate() " class="btn  btn-block">Next</button>
      </div>
    </div>
    </form>
    </div>














